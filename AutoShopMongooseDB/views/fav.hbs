<h1>Авто</h1>

<div id="fav">
    {{#if auto.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
    <tbody>

        {{#each auto}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btm-small js-remove" data-id="{{id}}">Удалить</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
  </table>
  <p><strong>Ценна:</strong><span class="price">{{price}}</span></p>
  {{else}}
  <p>Фаворитов нет</p>
  {{/if}}
</div>